{% extends 'DiverPriceLisrBundle::default.html.twig' %}

{% block content -%}
    <h1>Items</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Name_ru</th>
                <td>{{ entity.nameru }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ entity.fullname }}</td>
            </tr>
            <tr>
                <th>Partnumber</th>
                <td>{{ entity.partnumber }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ entity.manufacturer }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Garant</th>
                <td>{{ entity.garant }}</td>
            </tr>
            <tr>
                <th>Ostatok_lviv</th>
                <td>{{ entity.ostatoklviv }}</td>
            </tr>
            <tr>
                <th>Ostatok_kyyiv</th>
                <td>{{ entity.ostatokkyyiv }}</td>
            </tr>
            <tr>
                <th>Ostatok_odesa</th>
                <td>{{ entity.ostatokodesa }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('items') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('items_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('items_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
